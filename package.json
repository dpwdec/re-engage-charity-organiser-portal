{
  "name": "charity-apr2020",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www",
    "start:dev": "PORT=3000 MONGODB_URL='mongodb://localhost/re_engage' npm start ",
